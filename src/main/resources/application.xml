<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
    <!--        <property name="location" value="classpath:application.properties"/>-->
    <!--    </bean>-->
    <context:annotation-config/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
    <context:property-placeholder location="classpath:application.properties"/>
    <bean class="by.bnd.spring.bpp.InjectBeanPostProcessor"/>
    <bean id="repo1" name="r1" class="by.bnd.spring.database.repository.UserRepository"/>
    <bean name="connectionPool1" class="by.bnd.spring.database.repository.pool.ConnectionPool">
        <constructor-arg name="username" value="${db.username}"/>
        <constructor-arg name="password" value="${db.password}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}"/>
        <constructor-arg name="url" value="${db.url}"/>
    </bean>
    <bean name="connectionPool2" class="by.bnd.spring.database.repository.pool.ConnectionPool">
        <constructor-arg name="username" value="${db.username}"/>
        <constructor-arg name="password" value="${db.password}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}"/>
        <constructor-arg name="url" value="${db.url}"/>
    </bean>
    <bean name="driver" class="java.lang.String">
        <constructor-arg value="PostgresDriver"/>
    </bean>
    <bean name="userDto" class="by.bnd.spring.dto.UserDto" scope="prototype"/>

    <bean name="userMapper" class="by.bnd.spring.mapper.UserMapper" scope="prototype">
        <constructor-arg name="userDto" ref="userDto"/>
    </bean>

    <bean name="userService" class="by.bnd.spring.service.UserService">
        <constructor-arg name="userMapper" ref="userMapper"/>
        <constructor-arg name="userRepository" ref="repo1"/>
    </bean>


</beans>